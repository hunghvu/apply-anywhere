<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment 4 Demo</title>
    <!-- add a reference to the external stylesheet -->
    <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="../">Apply Anywhere</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02"
            aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="../">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../offer">Jobs</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../career">Openings</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../salarypercity">City Overview</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../salarypercompany">Compare Salary</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../listings">Listings</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron">
        <p class="lead">Select a job title</p>
        <hr class="my-4">
        <form method="GET" action="../offer">
            <select name="job_title" onchange='this.form.submit()'>
                <option selected>Select a job title</option>
                <!-- Dynamically populate drop down option menu -->
                <%
                    if(typeof job_title != 'undefined'){
                        job_title.forEach(row => {
                    %>
                <option value="<%= row.job_title %>"><%= row.job_title %></option>
                <% })} %>
            </select>

            <table class="table table-hover">
                <caption style="color: green;">Job Information</caption>
                <thead>
                    <tr class="table-success">
                        <th scope="col" style="width: 33%;">Job Title </th>
                        <th scope="col">Expected Salary (USD)</th>
                        <th scope="col">The Industry</th>
                    </tr>
                </thead>
                <!-- Dynamically popuilate job info table (the first one) -->
                <%
                        if(typeof result != 'undefined'){
                            var set = new Set()
                            result.forEach(row => { 
                                if (!set.has(row.industry)){
                        %>
                <tr>
                    <td><%= row.job_title %></td>
                    <td><%= row.exp_sal %></td>
                    <td><%= row.industry %></td>
                </tr>
                <%          set.add(row.industry)
                                }
                            })
                        } %>
            </table>

            <table class="table table-hover">
                <caption style="color: green;">The Recruiters</caption>
                <thead>
                    <tr class="table-success">
                        <th scope="col">Recruiter</th>
                    </tr>
                </thead>
                <!-- Dynamically populate recruiter table -->
                <%
                    if(typeof result != 'undefined'){
                        var set = new Set()
                        result.forEach(row => { 
                            if (!set.has(row.company)){
                    %>
                <tr>
                    <td><%= row.company %></td>
                </tr>
                <%          set.add(row.company)
                            }
                        })
                    } %>

            </table>
        </form>

    </div>
</body>

</html>