    <div class="jumbotron">
        <hr class="my-4">
        <form method="GET" action="../career">
            <table class="table table-hover w-auto" style="float: left;">
                <caption style="color: green;">Company's average salary Vs. Job's market average</caption>
                <thead>
                    <tr class="table-success">
                        <th scope="col" style="width: 50%;">Company</th>
                        <th scope="col">The difference (USD)</th>
                    </tr>
                </thead>
                
                <!-- Dynamically fill in table -->
                <%
                           if(typeof result != 'undefined'){
                               result.forEach(row => { 
 
                           %>
                <tr>
                    <td><%= row.company %></td>
                    <td><%= row.company_vs_market_avg %></td>
                </tr>
                <%          
                                      
                               })
                           } %>
            </table>

            <!-- Chart  -->
            <canvas id="myChart" width="1000" height="500"></canvas>

            <!-- Using chart.js to create chart -->
            <% if(typeof result != 'undefined'){ %>
            <script>
                // Cannot access result in script? -> use json stringify 
                // to generate an array of json object?
                var jobResultJson = <%- JSON.stringify(result) %>
 
                var colorArray1 = []
                var colorArray2 = []
                var companyArray = []
                var salaryDifferenceArray = []
                jobResultJson.forEach(row => {
                    companyArray.push(row.company)
                    salaryDifferenceArray.push(row.company_vs_market_avg)
                });

                var chart = document.getElementById("myChart").getContext("2d")
                var jobChart = new Chart(chart, {
                    type: "line",
                    data: {
                        labels: companyArray,
                        datasets: [
                        {
                            label: "Average-salary difference",
                            data: salaryDifferenceArray
                        }
                        ]
                    },
                    options: {
                        maintainAspectRatio: false,
                        responsive: false
                    }
                })
            </script>
            <% } %>
        </form>
    </div>
</body>

</html>