<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment 4 Demo</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="../">Apply Anywhere</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02"
            aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="../">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../offer">Jobs</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../career">Openings</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../salarypercity">City Overview</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../salarypercompany">Compare Salary</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="../listings">Listings</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron">
        <hr class="my-4">

        <table class="table table-hover">
            <caption style="color: green;">Job Listings</caption>
            <thead>
                <tr class="table-success">
                    <th scope="col">Job title</th>
                    <th scope="col">Company</th>
                    <th scope="col">Openings</th>
                    <th scope="col">Proposed Salary</th>
                    <th scope="col">Job Type</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                </tr>
            </thead>

            <!-- Dynamically fill in table -->
            <%
                           if(typeof listings != 'undefined'){
                               listings.forEach(row => { 
 
                           %>
            <tr>
                <td><%= row.job_title %></td>
                <td>
                    <!-- Use EJS place holder as query -->
                    <a href="../listings?company=<%= row.company %>" style="color: blue">
                        <%= row.company %></a>
                </td>
                <td><%= row.job_openings %></td>
                <td><%= row.prop_salary %></td>
                <td><%= row.job_type %></td>
                <td><%= row.work_city %></td>
                <td><%= row.work_state %></td>
            </tr>
            <%                                             
                               })
                           } %>
        </table>

        <!-- Company table -->
        <table class="table table-hover">
            <caption style="color: green;">Company</caption>
            <thead>
                <tr class="table-success">
                    <th scope="col">Company</th>
                    <th scope="col">Average Salary</th>
                    <th scope="col">Number of Employments</th>
                </tr>
            </thead>
            <!-- Dynamically fill in table -->
            <%
                        if(typeof company != 'undefined'){
                            company.forEach(row => { 

                        %>
            <tr>
                <td><%= row.company %></td>
                <td><%= row.avg_sal %></td>
                <td><%= row.num_emp %></td>
            </tr>
            <%                                             
                            })
                        } %>
        </table>

    </div>
</body>

</html>